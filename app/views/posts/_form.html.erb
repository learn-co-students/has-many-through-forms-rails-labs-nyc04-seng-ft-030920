<%= form_for(@post) do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title %><br><br>

    <%= p.label :content %><br>
    <%= p.text_area :content %><br><br>

    <%= p.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
    <%= p.fields_for :categories, @post.categories.build do |c|%>
        <%= c.text_field :name %><br><br>
    <% end %>
    <%= p.submit %>
<% end %>
